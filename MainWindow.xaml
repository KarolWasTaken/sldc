<Window x:Class="sldc.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:sldc"
        mc:Ignorable="d"
        xmlns:Views="clr-namespace:sldc.View"
        xmlns:ViewModels="clr-namespace:sldc.ViewModel" 
        Title="MainWindow" Height="650" Width="1000"
        ResizeMode="CanMinimize">
    <Grid Background="{DynamicResource Shade}">
        <!--#region Responsible for changing view model for navigation -->
        <Grid.Resources>
            <DataTemplate DataType="{x:Type ViewModels:DSREViewModel}">
                <Views:DSREView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type ViewModels:DS2SoTFSViewModel}">
                <Views:DS2SoTFSView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type ViewModels:DS3ViewModel}">
                <Views:DS3View/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type ViewModels:ERViewModel}">
                <Views:ERView/>
            </DataTemplate>
        </Grid.Resources>
        <!--#endregion-->
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!--#region navigation buttons-->
        <StackPanel Grid.Column="0">
            <StackPanel.Resources>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Margin" Value="10,10,10,0"/>
                </Style>
            </StackPanel.Resources>
            <Button Content="DS: RE" Command="{Binding DSRENavigateCommand}"
                    Background="{DynamicResource Primary}"
                    Foreground="{DynamicResource PrimaryTextColour}"
                    BorderBrush="{DynamicResource Accent}"/>
            <Button Content="DS2: SoTFS" Command="{Binding DS2SoTFSNavigateCommand}"
                    Background="{DynamicResource Primary}"
                    Foreground="{DynamicResource PrimaryTextColour}"
                    BorderBrush="{DynamicResource Accent}"/>
            <Button Content="DS3" Command="{Binding DS3NavigateCommand}"
                    Background="{DynamicResource Primary}"
                    Foreground="{DynamicResource PrimaryTextColour}"
                    BorderBrush="{DynamicResource Accent}"/>
            <Button Content="ER" Command="{Binding ERNavigateCommand}"
                    Background="{DynamicResource Primary}"
                    Foreground="{DynamicResource PrimaryTextColour}"
                    BorderBrush="{DynamicResource Accent}"/>
            
            <!-- temp -->
            <CheckBox Content="LightTheme" Checked="DarkThemePressed"
                      Unchecked="LightThemePressed"
                      Margin="10,50,0,0"
                      Foreground="{DynamicResource TextColour}"/>
        </StackPanel>
        <!--#endregion-->
        

        <ContentControl Content="{Binding CurrentViewModel}"
                        Grid.Column="1"/>
    </Grid>
</Window>
